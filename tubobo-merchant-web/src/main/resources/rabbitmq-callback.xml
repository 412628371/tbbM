<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/rabbit
		http://www.springframework.org/schema/rabbit/spring-rabbit-1.7.xsd"
       default-lazy-init="true">

    <import resource="rabbitmq-base.xml"/>
    <!-- 消费者 队列声明-->
    <rabbit:queue id="rmqMerchantTaskGrabQueue" durable="true" auto-delete="false" exclusive="false" name="rmqMerchantTaskGrabQueue"/>
    <!-- 用于接收消息的处理类 -->
    <bean id="rmqTaskGrabHandler"   class="com.xinguang.tubobo.impl.merchant.mq.RmqTaskGrabHandler"></bean>
    <bean id="rmqTaskGrabListenerAdapter"  class="org.springframework.amqp.rabbit.listener.adapter.MessageListenerAdapter">
        <constructor-arg ref="rmqTaskGrabHandler" />
        <property name="defaultListenerMethod" value="handleMessage"></property>
        <!--<property name="messageConverter" ref="serializerMessageConverter"></property>-->
    </bean>
    <!-- 用于消息的监听的容器类SimpleMessageListenerContainer,监听队列  queues可以传多个-->
    <bean id="rmqTaskGrabListenerContainer"  class="org.springframework.amqp.rabbit.listener.SimpleMessageListenerContainer">
        <property name="queues" ref="rmqMerchantTaskGrabQueue"></property>
        <property name="connectionFactory" ref="rabbitmqConnectionFactory"></property>
        <property name="messageListener" ref="rmqTaskGrabListenerAdapter"></property>
    </bean>

    <rabbit:queue id="rmqMerchantTaskOperateQueue" durable="true" auto-delete="false" exclusive="false"
                  name="rmqMerchantTaskOperateQueue" />
    <bean id="rmqTaskOperateHandler"   class="com.xinguang.tubobo.impl.merchant.mq.RmqTaskOperateHandler"></bean>
    <bean id="rmqTaskOperateListenerAdapter"  class="org.springframework.amqp.rabbit.listener.adapter.MessageListenerAdapter">
        <constructor-arg ref="rmqTaskOperateHandler" />
        <property name="defaultListenerMethod" value="handleMessage"></property>
    </bean>

    <bean id="rmqMerchantTaskOperateListenerContainer"  class="org.springframework.amqp.rabbit.listener.SimpleMessageListenerContainer">
        <property name="queues" ref="rmqMerchantTaskOperateQueue"></property>
        <property name="connectionFactory" ref="rabbitmqConnectionFactory"></property>
        <property name="messageListener" ref="rmqTaskOperateListenerAdapter"></property>
    </bean>

    <rabbit:fanout-exchange id="merchant-grab-fanoutexchange" name="merchant-grab-fanoutexchange" durable="true" auto-delete="false">
        <rabbit:bindings>
            <rabbit:binding queue="rmqMerchantTaskGrabQueue"/>
        </rabbit:bindings>
    </rabbit:fanout-exchange>

    <rabbit:fanout-exchange id="merchant-task-operate-fanoutexchange" name="merchant-task-operate-fanoutexchange" durable="true" auto-delete="false">
        <rabbit:bindings>
            <rabbit:binding queue="rmqMerchantTaskOperateQueue"/>
        </rabbit:bindings>
    </rabbit:fanout-exchange>

    <!-- 创建rabbitTemplate 消息模板类 -->
    <rabbit:template id="addressInfoTemplate" connection-factory="rabbitmqConnectionFactory"  exchange="addressInfoQueue" />
    <!-- 生产者 队列声明-->
    <rabbit:queue id="addressInfoQueue" durable="true" auto-delete="false" exclusive="false" name="addressInfoQueue">
        <rabbit:queue-arguments>
            <entry key="x-dead-letter-exchange" value="merchant_addressInfo_query_exchange"/>
            <entry key="x-dead-letter-routing-key" value="merchant_addressInfo_routeKey_normal"/>
        </rabbit:queue-arguments>
    </rabbit:queue>
    <!-- work exchange -->
    <rabbit:direct-exchange name="merchant_addressInfo_query_exchange" durable="true" auto-delete="false">
        <rabbit:bindings>
            <rabbit:binding queue="addressInfoQueue" key="merchant_addressInfo_routeKey_normal"/>
        </rabbit:bindings>
    </rabbit:direct-exchange>
</beans>